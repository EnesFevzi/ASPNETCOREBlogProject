@model BlogProject1.EntityLayer.Concrete.CancerAbout
@{
    ViewData["Title"] = "EditCancerAbout";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<h1>Meme Kanseri Sayfası Düzenlenme Sayfası</h1>

@using (Html.BeginForm("EditCancerAbout", "CancerAbout", FormMethod.Post))
{
