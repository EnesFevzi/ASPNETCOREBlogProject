@using BlogProject1.EntityLayer.Concrete
@model List<Video>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                          @*  <img src="@item.VideoImage" height="225" width="240" />*@
                            <div class="product-desc">
                                <span class="product-price">
                                    @item.VideoCreateDate.ToShortDateString()
                                </span>
                                <small class="text-muted">@item.Category.CategoryName</small>
                                <a href="#" class="product-name"> @item.VideoTitle</a>
                                <div class="small m-t-xs">
                                    @item.VideoContent
                                </div>
                                <div class="m-t text-righ">

                                    <a href="/Video/VideoDetails/@item.VideoID" class="btn btn-xs btn-outline btn-primary">Detaylar <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>

</html>

