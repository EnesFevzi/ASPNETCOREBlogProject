@using BlogProject1.EntityLayer.Concrete
@model List<New>
@if (Model.Count > 0)
{
    <div class="tech-btm">
        <h4> Diğer Yazılar</h4>
        @foreach (var item in Model)
        {
            <div class="blog-grids row mb-3">
                <div class="col-md-5 blog-grid-left">
                    <a href="/Blog/BlogDetails/@item.NewID">
                        <img src="~/CoreBlogTema/@item.NewThumbnailImage" class="card-img-top img-fluid" alt="@item.NewTitle">
                    </a>
                </div>
                <div class="col-md-7 blog-grid-right">

                    <h5>
                        <a href="/Blog/BlogReadAll/@item.NewID">@item.NewTitle </a>
                    </h5>
                    <div class="sub-meta">
                        <span>
                            <i class="far fa-clock"></i> @item.NewsCreateDate.ToString("dd.MM.yyyy")
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
}
